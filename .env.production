# Server Configuration
PORT=8080
HOST=0.0.0.0
READ_TIMEOUT_SEC=5
WRITE_TIMEOUT_SEC=5
IDLE_TIMEOUT_SEC=60

# Canvas Configuration
CANVAS_WIDTH=100
CANVAS_HEIGHT=100
TILE_COOLDOWN_SECONDS=300  # 5 minutes en production

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_password_here
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_MIN_RETRY_DELAY_MS=100
REDIS_MAX_RETRY_DELAY_MS=500
REDIS_POOL_SIZE=100
REDIS_MIN_IDLE_CONNS=10

# WebSocket Configuration
WS_READ_BUFFER_SIZE=4096
WS_WRITE_BUFFER_SIZE=4096
WS_HANDSHAKE_TIMEOUT_SEC=10
WS_MAX_MESSAGE_SIZE=512
WS_PING_INTERVAL_SEC=30
WS_PONG_WAIT_SEC=60

# Rate Limiting
RATE_LIMIT=10
RATE_LIMIT_DURATION_SEC=1

# Logging
LOG_LEVEL=info

# Security
ALLOW_ALL_ORIGINS=false
ALLOWED_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
MAX_CONN_PER_IP=5 